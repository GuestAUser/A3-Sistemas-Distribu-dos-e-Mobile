# Application environment
NODE_ENV=production

# Server configuration
PORT=3000

# Database
DB_PATH=database.db

# JWT Configuration (REQUIRED - Generate strong secrets for production!)
JWT_SECRET=dev-jwt-secret-change-this-in-production-minimum-32-chars
REFRESH_TOKEN_SECRET=dev-refresh-secret-change-this-in-production-minimum-32-chars
JWT_EXPIRES_IN=1h

# Logging level (error, warn, info, verbose, debug)
LOG_LEVEL=info

# CORS allowed origins (comma-separated)
# For development, localhost is automatically allowed
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,https://fitness-local-project.onrender.com
